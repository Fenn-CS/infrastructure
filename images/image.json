{
  "builders": [
    {
      "ami_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdb",
          "volume_type": "gp2"
        }
      ],
      "ami_description": "Packer-built AMI for {{user `hostname`}} API on {{isotime}}",
      "ami_name": "{{user `hostname`}}-{{timestamp}}",
      "instance_type": "{{user `instance_type`}}",
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdb",
          "volume_size": "{{user `volume_size` }}",
          "volume_type": "gp2"
        }
      ],
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "name": "debian-10-amd64-20201214-484",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true,
        "owners": [
          "136693071363"
        ]
      },
      "ssh_username": "admin",
      "tags": {
        "Name": "{{user `hostname`}}",
        "built_by": "packer",
        "environment": "{{user `environment`}}"
      },
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "destination": "{{user `templates_path`}}",
      "source": "../templates",
      "type": "file"
    },
    {
      "extra_arguments": [
        "-vv",
        "--extra-vars",
        "script={{user `configure_script` }} perm_env={{user `environment`}} perm_hostname={{user `hostname`}} perm_subdomain={{user `environment`}} aws_region={{user `aws_region`}} aws_access_key_id={{user `aws_key`}} aws_secret_access_key={{user `aws_secret`}} templates_path={{user `templates_path`}} sentry_dsn={{user `sentry_dsn`}}"
      ],
      "playbook_file": "../provisioners/setup.yml",
      "type": "ansible"
    },
    {
      "ansible_env_vars": [
        "ANSIBLE_PIPELINING=True"
      ],
      "extra_arguments": [
        "-vv",
        "--extra-vars",
        "perm_env={{user `environment`}}"
      ],
      "playbook_file": "../provisioners/{{user `deploy_script`}}",
      "type": "ansible"
    }
  ],
  "variables": {
    "aws_key": "{{env `DEPLOY_AWS_ACCESS_KEY_ID`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "aws_secret": "{{env `DEPLOY_AWS_SECRET_ACCESS_KEY`}}",
    "environment": "{{ env `PERM_ENV` }}",
    "sentry_dsn": "{{env `SENTRY_DSN`}}",
    "templates_path": "/tmp/templates"
  }
}
